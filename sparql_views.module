/**
 * Entity property info getter callback for getting arguments.
 */
function sparql_views_resource_property_get_argument($arguments, array $options, $name, $type, $context) {
  return isset($arguments[$context['sparql_views_resource_replace_char'] . $name]) ? $arguments[$context['sparql_views_resource_replace_char'] . $name] : NULL;
}

/**
 * Entity property info setter callback for arguments.
 */
function sparql_views_resource_property_set_argument(&$arguments, $name, $value, $langcode, $type, $context) {
  $arguments[$context['sparql_views_resource_replace_char'] . $name] = $value;
}

function _sparql_views_predicate_ns($predicate) {
  $split = explode(':', $predicate);
  if(count($split) == 2)
    return $split[0];
  return FALSE; 
}

