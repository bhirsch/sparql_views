/**
 * Implements hook_entity_info_alter().
 *
 * Use this hook to specify bundles to avoid a recursion, as loading the entity
 * types needs the entity info too.
 */
function sparql_views_entity_info_alter(&$entity_info) {
  $types = entity_load('sparql_views_resource_type');
  foreach ($types as $type_name => $type) {
    $entity_info['sparql_views_resource']['bundles'][$type_name] = array(
      'label' => $type->name,
      'admin' => array(
        'path' => 'admin/structure/sparql-views/manage/%sparql_views_resource_type',
        'real path' => 'admin/structure/sparql-views/manage/' . $type->name,
        'bundle argument' => 4,
        'access arguments' => array('administer sparql_views types'),
      ),
    );
  }
}

